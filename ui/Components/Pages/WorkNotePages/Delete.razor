@page "/worknotes/delete"
@using Microsoft.EntityFrameworkCore
@using Eddy.Models
@inject IDbContextFactory<ui.Data.EddyWorkNotesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>WorkNote</h2>
    <hr />
    @if (worknote is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">RecordedAtTime</dt>
            <dd class="col-sm-10">@worknote.RecordedAtTime</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@worknote.Description</dd>
        </dl>
        <EditForm method="post" Model="worknote" OnValidSubmit="DeleteWorkNote" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(worknote is null)">Delete</button> |
            <a href="/worknotes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private WorkNote? worknote;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        worknote = await context.WorkNote.FirstOrDefaultAsync(m => m.Id == Id);

        if (worknote is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteWorkNote()
    {
        using var context = DbFactory.CreateDbContext();
        context.WorkNote.Remove(worknote!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/worknotes");
    }
}
