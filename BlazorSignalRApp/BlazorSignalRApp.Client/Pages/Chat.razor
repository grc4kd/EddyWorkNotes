@page "/chat"
@rendermode InteractiveWebAssembly
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Navigation
@implements IAsyncDisposable

<PageTitle>SignalR Log Viewer</PageTitle>

<h3>SignalR Operations Log</h3>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection? hubConnection;
    private List<string> messages = [];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            hubConnection = new HubConnectionBuilder()
                .WithUrl(Navigation.ToAbsoluteUri("/chathub"))
                .Build();

            // make this a delegate and register it to handle ReceiveMessage
            // check the method signature against the messages being sent out
            hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
            {
                try
                {
                    var formattedMessage = FormatSignalMessage(user, message);
                    messages.Add(formattedMessage);
                    InvokeAsync(StateHasChanged);
                }
                catch (Exception ex)
                {
                    // Log error if message cannot be formatted
                    var errorMessage = $"Error formatting message from {user}: {ex.Message}";
                    messages.Add(errorMessage);
                    InvokeAsync(StateHasChanged);
                }
            });

            await hubConnection.StartAsync();
        }
        catch (Exception ex)
        {
            // Log connection errors
            messages.Add($"Error connecting to SignalR: {ex.Message}");
            StateHasChanged();
        }
    }

    private string FormatSignalMessage(string user, string message)
    {
        try
        {
            // Parse the message to determine operation type and parameters
            if (message.StartsWith("timerReset"))
            {
                var timeValue = message.Substring("timerReset".Length).Trim();
                return $"timerReset {timeValue}: Timer was reset with a new time of {timeValue} seconds on the clock.";
            }
            else if (message.StartsWith("timerStarted"))
            {
                var timeValue = message.Substring("timerStarted".Length).Trim();
                return $"timerStarted {timeValue}: Timer was started with a time of {timeValue} seconds.";
            }
            else if (message.StartsWith("timerStopped"))
            {
                return "timerStopped: Timer was stopped.";
            }
            else if (message.StartsWith("timerPaused"))
            {
                return "timerPaused: Timer was paused.";
            }
            else if (message.StartsWith("timerResumed"))
            {
                return "timerResumed: Timer was resumed.";
            }
            else if (message.StartsWith("timerCompleted"))
            {
                return "timerCompleted: Timer has completed its cycle.";
            }
            else
            {
                // Default formatting for unknown message types
                return $"{user}: {message}";
            }
        }
        catch (Exception ex)
        {
            // Return error message if formatting fails
            return $"Error formatting message: {ex.Message}";
        }
    }

    public bool IsConnected =>
        hubConnection?.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
